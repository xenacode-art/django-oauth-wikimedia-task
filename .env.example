# Django Configuration
SECRET_KEY=django-insecure-replace-this-with-a-real-secret-key

# Wikimedia OAuth Credentials
# Get these from https://meta.wikimedia.org/wiki/Special:OAuthConsumerRegistration
MEDIAWIKI_CONSUMER_KEY=your_oauth_consumer_key_from_wikimedia
MEDIAWIKI_CONSUMER_SECRET=your_oauth_consumer_secret_from_wikimedia
MEDIAWIKI_CALLBACK=http://127.0.0.1:8080/oauth/complete/mediawiki/

# Toolforge Deployment
TOOLFORGE_DEPLOYMENT=false

# Database Configuration (for Toolforge)
# Database name for tools database (default: s57230__django_oauth_erik)
TOOLSDB_NAME=s57230__django_oauth_erik

# Wiki replica database (e.g., 'metawiki', 'enwiki', 'commonswiki')
# The wiki code determines which wiki's database replica to connect to
WIKI_REPLICA=metawiki
